---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/blog">{SITE_TITLE}</a></h2>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1.5em 1em;
		background: var(--background-color);
	}
	h2 {
		margin: 0;
		font-size: 1.5em;
		font-weight: bold;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	h2 a {
		text-decoration: none;
		color: var(--text-color);
	}
</style>
